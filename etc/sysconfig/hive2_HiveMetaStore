if [ -f /etc/sysconfig/hive2-env.sh ]; then
  . /etc/sysconfig/hive2-env.sh
fi

HIVE_CMD=$(which hive)
HIVE_VERSION=$($HIVE_CMD --version | head -1)

HIVE_PROCESS_DIR=${HIVEMETASTORE_PROCESS_DIR:-$HIVE_HOME}

HIVE_DAEMON_USER=${HIVEMETASTORE_DAEMON_USER:-"hiveserver"}
HIVE_DAEMON_NAME=${HIVEMETASTORE_DAEMON_NAME:-"hive2_HiveMetaStore"}

HIVE_DAEMON_OUT=${HIVEMETASTORE_DAEMON_OUT:-"/tmp/$HIVE_DAEMON_NAME.out"}
HIVE_DAEMON_PID_FILE=${HIVEMETASTORE_PID_FILE:-"/tmp/$HIVE_DAEMON_NAME.pid"}

HIVE_DAEMON_CMD=${HIVEMETASTORE_DAEMON_CMD:-"$HIVE_CMD --service metastore"}

HIVE_SCHEMA_DBTYPE=${HIVEMETASTORE_DBTYPE:-"derby"}
HIVE_METASTORE_PORT=${HIVEMETASTORE_PORT:-9083}
